<Window x:Class="PlushFood.Views.RegisterView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlushFood.Views"
        mc:Ignorable="d"
        Title="Регистрация" Height="645" Width="875"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True" 
        Background="Transparent" FontSize="18"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="1" Opacity="0.4"/>
        </Grid.Effect>
        <Border Background="{DynamicResource PrimaryBrush}" CornerRadius="10">
            <Grid Margin="60 0 60 0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="45"/>
                    <RowDefinition Height="4*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="1" Margin="0,0,0,7">
                    <TextBlock FontWeight="Light" FontSize="36" 
                               Foreground="{DynamicResource SecondaryBrush}" 
                               TextAlignment="Center" Text="Регистрация"/>

                    <!-- Поле для ввода логина -->
                    <Border Background="#cae412" Width="320" CornerRadius="5" Height="40" Margin="6" Opacity="0.7">
                        <Grid>
                            <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                                     Background="Transparent" BorderThickness="0" Width="300"
                                     Foreground="{DynamicResource SecondaryBrush}"
                                     VerticalAlignment="Center" />
                            <TextBlock Text="Логин" Foreground="Gray"
                                       VerticalAlignment="Center" Margin="5,0,0,0"
                                       IsHitTestVisible="False"
                                       Visibility="{Binding Username, Converter={StaticResource StringToVisibilityConverter}}" />
                        </Grid>

                    </Border>

                    <!-- Поле для ввода пароля -->
                    <Border Background="#cae412" Width="320" CornerRadius="5" Height="40" Margin="6" Opacity="0.7">
                        <Grid>
                            <PasswordBox x:Name="PasswordBox" 
                                         Background="Transparent" 
                                         BorderThickness="0" Width="300"
                                         Foreground="{DynamicResource SecondaryBrush}"
                                         VerticalAlignment="Center"
                                         PasswordChanged="PasswordBox_PasswordChanged"/>
                            <TextBlock Text="Пароль" Foreground="Gray" 
                                       VerticalAlignment="Center" Margin="5,0,0,0" 
                                       IsHitTestVisible="False" 
                                       Visibility="{Binding Password, Converter={StaticResource StringToVisibilityConverter}}"/>
                        </Grid>
                    </Border>

                    <!-- Поле для ввода email -->
                    <Border Background="#cae412" Width="320" CornerRadius="5" Height="40" Margin="6" Opacity="0.7">
                        <Grid>
                            <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" 
                                     Background="Transparent" BorderThickness="0" Width="300"
                                     Foreground="{DynamicResource SecondaryBrush}" 
                                     VerticalAlignment="Center"/>
                            <TextBlock Text="Email" Foreground="Gray" 
                                       VerticalAlignment="Center" Margin="5,0,0,0" 
                                       IsHitTestVisible="False" 
                                       Visibility="{Binding Email, Converter={StaticResource StringToVisibilityConverter}}"/>
                        </Grid>
                    </Border>

                    <!-- Поле для ввода имени -->
                    <Border Background="#cae412" Width="320" CornerRadius="5" Height="40" Margin="6" Opacity="0.7">
                        <Grid>
                            <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" 
                                     Background="Transparent" BorderThickness="0" Width="300"
                                     Foreground="{DynamicResource SecondaryBrush}" 
                                     VerticalAlignment="Center"/>
                            <TextBlock Text="Имя" Foreground="Gray" 
                                       VerticalAlignment="Center" Margin="5,0,0,0" 
                                       IsHitTestVisible="False" 
                                       Visibility="{Binding FirstName, Converter={StaticResource StringToVisibilityConverter}}"/>
                        </Grid>
                    </Border>

                    <!-- Поле для ввода фамилии -->
                    <Border Background="#cae412" Width="320" CornerRadius="5" Height="40" Margin="6" Opacity="0.7">
                        <Grid>
                            <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" 
                                     Background="Transparent" BorderThickness="0" Width="300"
                                     Foreground="{DynamicResource SecondaryBrush}" 
                                     VerticalAlignment="Center"/>
                            <TextBlock Text="Фамилия" Foreground="Gray" 
                                       VerticalAlignment="Center" Margin="5,0,0,0" 
                                       IsHitTestVisible="False" 
                                       Visibility="{Binding LastName, Converter={StaticResource StringToVisibilityConverter}}"/>
                        </Grid>
                    </Border>

                    <!-- Поле для ввода адреса -->
                    <Border Background="#cae412" Width="320" CornerRadius="5" Height="40" Margin="6" Opacity="0.7">
                        <Grid>
                            <TextBox Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}" 
                                     Background="Transparent" BorderThickness="0" Width="300"
                                     Foreground="{DynamicResource SecondaryBrush}" 
                                     VerticalAlignment="Center"/>
                            <TextBlock Text="Адрес" Foreground="Gray" 
                                       VerticalAlignment="Center" Margin="5,0,0,0" 
                                       IsHitTestVisible="False" 
                                       Visibility="{Binding Address, Converter={StaticResource StringToVisibilityConverter}}"/>
                        </Grid>
                    </Border>

                    <!-- Поле для ввода номера телефона -->
                    <Border Background="#cae412" Width="320" CornerRadius="5" Height="40" Margin="6" Opacity="0.7">
                        <Grid>
                            <TextBox Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}" 
                                     Background="Transparent" BorderThickness="0" Width="300"
                                     Foreground="{DynamicResource SecondaryBrush}" 
                                     VerticalAlignment="Center"/>
                            <TextBlock Text="Номер телефона" Foreground="Gray" 
                                       VerticalAlignment="Center" Margin="5,0,0,0" 
                                       IsHitTestVisible="False" 
                                       Visibility="{Binding PhoneNumber, Converter={StaticResource StringToVisibilityConverter}}"/>
                        </Grid>
                    </Border>
                </StackPanel>

                <Border VerticalAlignment="Top" Margin="232,0,233,0" Grid.Row="2" Background="#3d4405" Height="50" CornerRadius="10">
                    <Button Content="Зарегистрировать" 
                            Background="Transparent" 
                            Margin="5" Foreground="white" 
                            FontSize="23" BorderThickness="0" 
                            Command="{Binding RegisterCommand}"/>
                </Border>

                <Border VerticalAlignment="Top" Margin="0,20,0,0" Background="Transparent" Height="25" Width="26" CornerRadius="5" HorizontalAlignment="Left">
                    <Button Content="ᐊ" Background="Transparent"
                            HorizontalAlignment="Center"
                            Foreground="{DynamicResource SecondaryBrush}"
                            BorderThickness="0" FontSize="32"
                            VerticalAlignment="Top" Height="50" RenderTransformOrigin="0.477,0.81" Margin="0,-14,0,0"
                            Command="{Binding BackCommand}" />
                </Border>


                <Button Content="◑" FontSize="28" Command="{Binding SwitchThemeCommand}"
                        HorizontalAlignment="Left" Width="40" Margin="675,14,0,0"
                        Background="Transparent" BorderBrush="Transparent"
                        BorderThickness="0" Height="40" VerticalAlignment="Top"
                        Foreground="{DynamicResource SecondaryBrush}" Grid.RowSpan="2"
                        />
            </Grid>
        </Border>
    </Grid>
</Window>
