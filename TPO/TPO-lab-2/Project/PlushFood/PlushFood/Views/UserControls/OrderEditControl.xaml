<UserControl x:Class="PlushFood.Views.UserControls.OrderEditControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PlushFood.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Номер заказа -->
            <TextBlock Text="Номер заказа" Grid.Row="0" Grid.Column="0" Margin="0,5,0,0"
                   VerticalAlignment="Center" Foreground="{DynamicResource SecondaryBrush}"/>
            <TextBlock Text="{Binding SelectedOrder.OrderID}" 
                   VerticalAlignment="Center"
                   Grid.Row="0" Grid.Column="1" Margin="5"/>

            <!-- Номер клиента -->
            <TextBlock Text="Номер клиента" Grid.Row="1" Grid.Column="0" Margin="0,5,0,0"
                   VerticalAlignment="Center" Foreground="{DynamicResource SecondaryBrush}"/>
            <TextBlock Text="{Binding SelectedOrder.ClientID}"
                   VerticalAlignment="Center"
                   Grid.Row="1" Grid.Column="1" Margin="5"/>

            <!-- Дата заказа -->
            <TextBlock Text="Дата заказа" Grid.Row="2" Grid.Column="0" Margin="0,5,0,0"
                   VerticalAlignment="Center" Foreground="{DynamicResource SecondaryBrush}"/>
            <TextBlock Text="{Binding SelectedOrder.OrderDate}" 
                   VerticalAlignment="Center"
                   Grid.Row="2" Grid.Column="1" Margin="5"/>

            <!-- Полная сумма -->
            <TextBlock Text="Полная сумма" Grid.Row="3" Grid.Column="0" Margin="0,5,0,0"
                   VerticalAlignment="Center" Foreground="{DynamicResource SecondaryBrush}"/>
            <TextBlock Text="{Binding SelectedOrder.TotalAmount}"
                   VerticalAlignment="Center"
                   Grid.Row="3" Grid.Column="1" Margin="5"/>

            <!-- Статус -->
            <TextBlock Text="Статус" Grid.Row="4" Grid.Column="0" Margin="0,5,0,0"
                   VerticalAlignment="Center" Foreground="{DynamicResource SecondaryBrush}"/>
            <ComboBox ItemsSource="{Binding Statuses}" 
                  SelectedItem="{Binding SelectedOrder.Status, Mode=TwoWay}"
                  Grid.Row="4" Grid.Column="1" Margin="5" Height="30"/>

            <!-- Таблица деталей заказа -->
            <DataGrid Name="OrderDetailsDataGrid" AutoGenerateColumns="False" 
                  BorderBrush="Transparent"
                  ItemsSource="{Binding OrderDetails}"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  Grid.Row="5" Grid.ColumnSpan="2" Margin="0,10,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID блюда" Binding="{Binding MealID}" />
                <DataGridTextColumn Header="Название" Binding="{Binding Meal.Name}" />
                <DataGridTextColumn Header="Количество" Binding="{Binding Quantity}" />
                <DataGridTextColumn Header="Цена" Binding="{Binding Price}" />
            </DataGrid.Columns>
        </DataGrid>

            <!-- Кнопка сохранения -->
        <Button Content="Сохранить" Command="{Binding SaveOrderCommand}" 
                Grid.Row="6" Grid.ColumnSpan="2" Margin="10,10,0,0" Width="100" Height="35"
                HorizontalAlignment="Center"/>
        </Grid>
    </UserControl>
