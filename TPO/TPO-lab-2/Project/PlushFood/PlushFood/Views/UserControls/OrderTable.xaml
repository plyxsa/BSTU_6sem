<UserControl x:Class="PlushFood.Views.UserControls.OrderTable"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PlushFood.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <DataGrid Name="OrdersDataGrid" AutoGenerateColumns="False" 
                  BorderBrush="Transparent"
                  ItemsSource="{Binding Orders}" 
                  SelectedItem="{Binding SelectedOrder, Mode=TwoWay}" 
                  CanUserAddRows="False"
                  Foreground="{DynamicResource SecondaryBrush}"
                  RowBackground="{DynamicResource PrimaryBrush}"
                  Background="{DynamicResource PrimaryBrush}"
                  IsReadOnly="True">
            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Foreground" Value="{DynamicResource SecondaryBrush}" />
                    <Setter Property="Background" Value="{DynamicResource ThirdBrush}" />
                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding OrderID}" Width="50"/>
                <DataGridTextColumn Header="Клиент" Binding="{Binding Client.FirstName}" Width="*"/>
                <DataGridTextColumn Header="Дата заказа" Binding="{Binding OrderDate}" Width="*"/>
                <DataGridTextColumn Header="Общая сумма" Binding="{Binding TotalAmount}" Width="*"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
