<UserControl x:Class="PlushFood.Views.UserControls.ClientEditForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PlushFood.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- Имя -->
        <TextBlock Text="Имя" Grid.Row="0" Grid.Column="0" Margin="0,5,0,0"
                   VerticalAlignment="Center" Foreground="{DynamicResource SecondaryBrush}"/>
        <TextBox Text="{Binding SelectedClient.FirstName, Mode=TwoWay}" 
                 VerticalAlignment="Center"
                 Grid.Row="0" Grid.Column="1" Margin="5" Height="30"/>

        <!-- Фамилия -->
        <TextBlock Text="Фамилия" Grid.Row="1" Grid.Column="0" Margin="0,5,0,0"
                   VerticalAlignment="Center" Foreground="{DynamicResource SecondaryBrush}"/>
        <TextBox Text="{Binding SelectedClient.LastName, Mode=TwoWay}"
                 VerticalAlignment="Center"
                 Grid.Row="1" Grid.Column="1" Margin="5" Height="30"/>

        <!-- Имя пользователя -->
        <TextBlock Text="Имя пользователя" Grid.Row="2" Grid.Column="0" Margin="0,5,0,0"
                   VerticalAlignment="Center" Foreground="{DynamicResource SecondaryBrush}"/>
        <TextBox Text="{Binding SelectedClient.UserName, Mode=TwoWay}" 
                 VerticalAlignment="Center"
                 Grid.Row="2" Grid.Column="1" Margin="5" Height="30"/>

        <!-- Email -->
        <TextBlock Text="Email" Grid.Row="3" Grid.Column="0" Margin="0,5,0,0"
                   VerticalAlignment="Center" Foreground="{DynamicResource SecondaryBrush}"/>
        <TextBox Text="{Binding SelectedClient.Email, Mode=TwoWay}"
                 VerticalAlignment="Center"
                 Grid.Row="3" Grid.Column="1" Margin="5" Height="30"/>

        <!-- Телефон -->
        <TextBlock Text="Телефон" Grid.Row="4" Grid.Column="0" Margin="0,5,0,0"
                   VerticalAlignment="Center" Foreground="{DynamicResource SecondaryBrush}"/>
        <TextBox Text="{Binding SelectedClient.PhoneNumber, Mode=TwoWay}" 
                 VerticalAlignment="Center"
                 Grid.Row="4" Grid.Column="1" Margin="5" Height="30"/>

        <!-- Адрес -->
        <TextBlock Text="Адрес" Grid.Row="5" Grid.Column="0" Margin="0,5,0,0"
                   VerticalAlignment="Center" Foreground="{DynamicResource SecondaryBrush}"/>
        <TextBox Text="{Binding SelectedClient.Address, Mode=TwoWay}"
                 VerticalAlignment="Center"
                 Grid.Row="5" Grid.Column="1" Margin="5" Height="30"/>

        <!-- Кнопки управления -->
        <StackPanel Grid.Row="6" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Сохранить" Margin="5" Command="{Binding SaveClientCommand}" Width="100" Height="35" />
            <Button Content="Удалить" Margin="5" Command="{Binding DeleteClientCommand}" Width="100" Height="35" />
        </StackPanel>
    </Grid>
</UserControl>
