<UserControl x:Class="PlushFood.Views.UserControls.MealEditControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PlushFood.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="55"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- Название блюда -->
        <TextBlock Name="NameTextBox" Text="Название блюда" Grid.Row="0" Grid.Column="0" Margin="0,5,0,0"
                   VerticalAlignment="Center" Foreground="{DynamicResource SecondaryBrush}"/>
        <TextBox Text="{Binding SelectedMeal.Name, UpdateSourceTrigger=PropertyChanged}" 
                 VerticalAlignment="Center" Grid.Row="0" Grid.Column="1" 
                 Margin="5" Height="30"
                 />

        <!-- Категория -->
        <TextBlock Name="CategoryComboBox" Text="Категория" Grid.Row="1" Grid.Column="0" Margin="0,5,0,0"
                   VerticalAlignment="Center" 
                   Foreground="{DynamicResource SecondaryBrush}"/>
        <ComboBox ItemsSource="{Binding Categories}"
          DisplayMemberPath="CategoryName" 
          SelectedValuePath="CategoryID" 
          SelectedValue="{Binding SelectedMeal.CategoryID}"
          VerticalAlignment="Center" Grid.Row="1"
          Grid.Column="1" Margin="5" Height="30"/>



        <!-- Цена -->
        <TextBlock Text="Цена" Grid.Row="2" Grid.Column="0" Margin="0,5,0,0"
                   VerticalAlignment="Center" Foreground="{DynamicResource SecondaryBrush}"/>
        <TextBox Text="{Binding SelectedMeal.Price, UpdateSourceTrigger=PropertyChanged}" 
                 VerticalAlignment="Center" Grid.Row="2" Grid.Column="1" 
                 Margin="5" Height="30" 
                 />

        <!-- Доступность -->
        <TextBlock Text="Доступность" Grid.Row="3" Grid.Column="0" Margin="0,5,0,0"
                   VerticalAlignment="Center" Foreground="{DynamicResource SecondaryBrush}"/>
        <CheckBox IsChecked="{Binding SelectedMeal.IsAvailable}" 
                  Grid.Row="3" Grid.Column="1" Margin="5" />

        <!-- Описание -->
        <TextBlock Text="Описание" Grid.Row="4" Grid.Column="0" Margin="0,5,0,0"
                   VerticalAlignment="Center" Foreground="{DynamicResource SecondaryBrush}"/>
        <TextBox Text="{Binding SelectedMeal.Description}" VerticalAlignment="Center"
                 Grid.Row="4" Grid.Column="1" Margin="5" Height="30"
                 />

        <!-- Калории -->
        <TextBlock Text="Калории" Grid.Row="5" Grid.Column="0" Margin="0,5,0,0"
                   VerticalAlignment="Center" Foreground="{DynamicResource SecondaryBrush}"/>
        <TextBox Text="{Binding SelectedMeal.Calories}" VerticalAlignment="Center"
                 Grid.Row="5" Grid.Column="1" Margin="5" Height="30"
                 />

        <!-- Белки -->
        <TextBlock Text="Белки" Grid.Row="6" Grid.Column="0" Margin="0,5,0,0"
                   VerticalAlignment="Center" Foreground="{DynamicResource SecondaryBrush}"/>
        <TextBox Text="{Binding SelectedMeal.Proteins}" VerticalAlignment="Center"
                 Grid.Row="6" Grid.Column="1" Margin="5" Height="30"
                 />

        <!-- Жиры -->
        <TextBlock Text="Жиры" Grid.Row="7" Grid.Column="0" Margin="0,5,0,0"
                   VerticalAlignment="Center" Foreground="{DynamicResource SecondaryBrush}"/>
        <TextBox Text="{Binding SelectedMeal.Fats}" VerticalAlignment="Center"
                 Grid.Row="7" Grid.Column="1" Margin="5" Height="30"
                 />

        <!-- Углеводы -->
        <TextBlock Text="Углеводы" Grid.Row="8" Grid.Column="0" Margin="0,5,0,0"
                   VerticalAlignment="Center" Foreground="{DynamicResource SecondaryBrush}"/>
        <TextBox Text="{Binding SelectedMeal.Carbohydrates}" VerticalAlignment="Center"
                 Grid.Row="8" Grid.Column="1" Margin="5" Height="30"
                 />

        <!-- Поле для выбора изображения -->
        <TextBlock Text="Изображение" Grid.Row="9" Grid.Column="0" Margin="0,5,0,0"
           VerticalAlignment="Center" Foreground="{DynamicResource SecondaryBrush}"/>
        <StackPanel Grid.Row="9" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
            <Image Source="{Binding SelectedMeal.ImagePath}" Width="100" Height="100" Margin="5" Stretch="Uniform" />
            <Button Content="Выбрать изображение"
                    Command="{Binding ChooseImageCommand}"
            Margin="5" Width="150" Height="30" />
        </StackPanel>


        <!-- Кнопки управления -->
        <StackPanel Grid.Row="10" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Сохранить" Margin="5" Command="{Binding SaveMealCommand}" Width="100" Height="35" />
            <Button Content="Удалить" Margin="5" Command="{Binding DeleteMealCommand}" Width="100" Height="35" />
            <Button Content="Создать" Margin="5" Command="{Binding CreateMealCommand}" Width="100" Height="35" />
        </StackPanel>
    </Grid>
</UserControl>
