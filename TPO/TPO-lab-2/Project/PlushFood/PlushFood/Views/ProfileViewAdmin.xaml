<Window x:Class="PlushFood.Views.ProfileViewAdmin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlushFood.Views"
        mc:Ignorable="d"
        Title="ProfileViewAdmin" Height="645" Width="875"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True"
        Background="Transparent" FontSize="18"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="1" Opacity="0.4"/>
        </Grid.Effect>
        <Border Background="{DynamicResource PrimaryBrush}" CornerRadius="10">
            <Grid Margin="60 0 60 0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="45"/>
                    <RowDefinition Height="4*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,7">
                    <TextBlock FontWeight="Light" FontSize="32" 
                               Foreground="{DynamicResource SecondaryBrush}" 
                               TextAlignment="Center" Text="Редактирование профиля"/>

                    <!-- Логин -->
                    <StackPanel Orientation="Horizontal" Margin="6">
                        <TextBlock Text="Логин" FontSize="16" Foreground="{DynamicResource SecondaryBrush}" VerticalAlignment="Center" Width="120"/>
                        <Border Background="#cae412" Width="320" CornerRadius="5" Height="40" Opacity="0.7">
                            <TextBox Text="{Binding CurrentAdmin.UserName, UpdateSourceTrigger=PropertyChanged}"
                                     Background="Transparent" BorderThickness="0" Width="300"
                                     Foreground="{DynamicResource SecondaryBrush}" VerticalAlignment="Center"/>
                        </Border>
                    </StackPanel>

                    <!-- Email -->
                    <StackPanel Orientation="Horizontal" Margin="6">
                        <TextBlock Text="Email" FontSize="16" Foreground="{DynamicResource SecondaryBrush}" VerticalAlignment="Center" Width="120"/>
                        <Border Background="#cae412" Width="320" CornerRadius="5" Height="40" Opacity="0.7">
                            <TextBox Text="{Binding CurrentAdmin.Email, UpdateSourceTrigger=PropertyChanged}" 
                                     Background="Transparent" BorderThickness="0" Width="300"
                                     Foreground="{DynamicResource SecondaryBrush}" VerticalAlignment="Center"/>
                        </Border>
                    </StackPanel>
                    
                    <!-- Новый пароль -->
                    <StackPanel Orientation="Horizontal" Margin="6">
                        <TextBlock Text="Новый пароль" FontSize="16" Foreground="{DynamicResource SecondaryBrush}" VerticalAlignment="Center" Width="120"/>
                        <Border Background="#cae412" Width="320" CornerRadius="5" Height="40" Opacity="0.7">
                            <PasswordBox x:Name="PasswordBox" Background="Transparent" BorderThickness="0" Width="300"
                                         Foreground="{DynamicResource SecondaryBrush}" VerticalAlignment="Center"/>
                        </Border>
                    </StackPanel>

                    <!-- Подтверждение пароля -->
                    <StackPanel Orientation="Horizontal" Margin="6">
                        <TextBlock Text="Подтверждение" FontSize="16" Foreground="{DynamicResource SecondaryBrush}" VerticalAlignment="Center" Width="120"/>
                        <Border Background="#cae412" Width="320" CornerRadius="5" Height="40" Opacity="0.7">
                            <PasswordBox x:Name="ConfirmPasswordBox" 
                                         Background="Transparent" 
                                         BorderThickness="0" Width="300"
                                         Foreground="{DynamicResource SecondaryBrush}" 
                                         VerticalAlignment="Center"/>
                        </Border>
                    </StackPanel>

                </StackPanel>

                <!-- Кнопка для сохранения изменений -->
                <Border VerticalAlignment="Top" Margin="232,0,233,0" Grid.Row="2" Background="#3d4405" Height="50" CornerRadius="10">
                    <Button Content="Сохранить изменения" 
                            Background="Transparent" 
                            Margin="5" Foreground="white" 
                            FontSize="20" BorderThickness="0" 
                            Command="{Binding SaveProfileCommand}"/>
                </Border>

                <!-- Кнопка для возврата -->
                <Border VerticalAlignment="Top" Margin="0,20,0,0" Background="Transparent" Height="25" Width="26" CornerRadius="5" HorizontalAlignment="Left">
                    <Button Content="ᐊ" Background="Transparent"
                            HorizontalAlignment="Center"
                            Foreground="{DynamicResource SecondaryBrush}"
                            BorderThickness="0" FontSize="32"
                            VerticalAlignment="Top" Height="50" RenderTransformOrigin="0.477,0.81" Margin="0,-14,0,0"
                            Command="{Binding NavigateBackCommand}" />
                </Border>

                <Button Content="◑" FontSize="28" Command="{Binding SwitchThemeCommand}"
                        HorizontalAlignment="Left" Width="40" Margin="675,14,0,0"
                        Background="Transparent" BorderBrush="Transparent"
                        BorderThickness="0" Height="40" VerticalAlignment="Top"
                        Foreground="{DynamicResource SecondaryBrush}" Grid.RowSpan="2"/>
            </Grid>
        </Border>
    </Grid>
</Window>
