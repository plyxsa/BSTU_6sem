<Window x:Class="PlushFood.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlushFood"
        mc:Ignorable="d"
        Title="MainWindow" Height="645" Width="875"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True" 
        Background="Transparent" FontSize="18">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="371*"/>
            <ColumnDefinition Width="332*"/>
            <ColumnDefinition Width="132*"/>
        </Grid.ColumnDefinitions>
        <Grid.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="1" Opacity="0.4"/>
        </Grid.Effect>
        <Border Background="#657209" CornerRadius="10 0 0 10" ClipToBounds="True">
            <Border.Clip>
                <RectangleGeometry Rect="0,0,400,605" RadiusX="10" RadiusY="10"/>
            </Border.Clip>
            <Grid>
                <StackPanel Margin="0 120 0 0" VerticalAlignment="Top">
                    <TextBlock FontWeight="Light" FontSize="36" 
                               Foreground="{DynamicResource PrimaryBrush}" TextAlignment="Center" Text="PlushFood"/>
                    <TextBlock FontWeight="Light" FontSize="18" Foreground="{DynamicResource PrimaryBrush}" TextAlignment="Center" Text="Домашняя еда по лучшим ценам"/>
                    <TextBlock FontWeight="Light" FontSize="18" Foreground="{DynamicResource PrimaryBrush}" TextAlignment="Center" Text="Лопатнюк Полина"/>

                </StackPanel>

                <Ellipse Width="500" Height="500" VerticalAlignment="Bottom"
                 Fill="#79890b" Margin="50 0 0 -200" Opacity="0.6"/>
                <Ellipse Width="300" Height="300" VerticalAlignment="Bottom"
                 Fill="#a2b60e" Margin="-450 0 0 30" Opacity="0.3"/>
                <Ellipse Width="400" Height="400" VerticalAlignment="Bottom"
                 Fill="#b6cd10" Margin="-320 0 0 -120" Opacity="0.3"/>
                <Ellipse Width="250" Height="250" VerticalAlignment="Bottom"
                 Fill="#cae412" Margin="-380 0 0 -120" />
                <Ellipse Width="400" Height="400" VerticalAlignment="Bottom"
                 Fill="#cae412" Margin="280 0 0 -70" Opacity="0.8"/>

            </Grid>
        </Border>
        <Border Background="{DynamicResource PrimaryBrush}" CornerRadius="0 10 10 0" Grid.ColumnSpan="3" Margin="371,0,0,0">
            <Grid Margin="60 0 60 0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="94"/>
                    <RowDefinition Height="243*"/>
                    <RowDefinition Height="268*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="1" Margin="0,10,0,0">
                    <Border  Width="320" CornerRadius="5" Height="76" Margin="6" Opacity="0.7">
                        <Label Background="Transparent" Foreground="{DynamicResource SecondaryBrush}" FontSize="32" BorderThickness="0" Width="300" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Добро пожаловать!" Height="60"/>

                    </Border>
                    <Border Background="#cae412" Width="320" CornerRadius="5" Height="40" Margin="6" Opacity="0.7">
                        <TextBox Name="txtUsername"  Background="Transparent"
                                 BorderThickness="0" Width="300" 
                                 Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                                 VerticalAlignment="Center"/>
                    </Border>

                    <Border Background="#cae412" Width="320" CornerRadius="5" Height="40" Margin="6" Opacity="0.7">
                        <PasswordBox Name="txtPassword" Background="Transparent"
                                 BorderThickness="0" Width="300" 
                                 VerticalAlignment="Center"
                                 PasswordChanged="PasswordBox_PasswordChanged"
                                 InputScope="Password"/>
                    </Border>

                </StackPanel>
                <Border VerticalAlignment="Top" Grid.Row="2" Background="#3d4405" Height="50" CornerRadius="10" Margin="47,0,47,0">
                    <Button Content="Войти" Background="Transparent" 
                            Margin="5" Foreground="{DynamicResource PrimaryBrush}"
                            FontSize="23" BorderThickness="0"
                            Command="{Binding LoginCommand}">

                    </Button>

                </Border>
                <Border VerticalAlignment="Top" Margin="47,62,47,0" Grid.Row="2" Background="#3d4405" Height="50" CornerRadius="10">
                    <Button Content="Регистрация" 
                            Background="Transparent" Margin="5" 
                            Foreground="{DynamicResource PrimaryBrush}" 
                            FontSize="23" BorderThickness="0"
                            Command="{Binding NavigateToRegisterCommand}">

                    </Button>

                </Border>

                <Border VerticalAlignment="Top" Margin="47,117,47,0" Grid.Row="2" Height="50" CornerRadius="10">
                    <Button Content="Войти как гость" FontStyle="Italic"
                        Background="Transparent" Margin="5" 
                        Foreground="Gray" FontSize="20" BorderThickness="0"
                        Command="{Binding NavigateAsGuestCommand}">

                    </Button>

                </Border>
                <Button Content="◑" FontSize="28" Command="{Binding SwitchThemeCommand}"
                        HorizontalAlignment="Left" Width="40" Margin="304,47,0,0"
                        Background="Transparent" BorderBrush="Transparent"
                        BorderThickness="0" Height="40" VerticalAlignment="Top"
                        Foreground="{DynamicResource SecondaryBrush}"
                        />
            </Grid>

        </Border>
    </Grid>
</Window>
